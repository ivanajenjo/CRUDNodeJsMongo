<%- include ('partials/_header'); %>

<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/editar/<%= tarea._id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="titulo" placeholder="Inserta un Título" class="form-control" value="<%= tarea.titulo %>">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" cols="80" class="form-control" placeholder="Inserta una descripción"><%= tarea.descripcion %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Editar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer'); %>